<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="164dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:barrierMargin="10dp"
            app:layout_constraintRight_toRightOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card"
            tools:srcCompat="@mipmap/ic_hamatgad_background" />


        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:height="40dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="@id/card" />

        <TextView
            android:id="@+id/sTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="TextView"
            android:textColor="#CA2020"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageView"
            app:layout_constraintRight_toLeftOf="@id/titleTextView" />

        <TextView
            android:id="@+id/imageUrlTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="TextView"
            android:textColor="#CA2020"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageView"
            app:layout_constraintRight_toLeftOf="@id/titleTextView" />

        <TextView
            android:id="@+id/objectIdtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="TextView"
            android:textColor="#CA2020"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageView"
            app:layout_constraintRight_toLeftOf="@id/titleTextView" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>